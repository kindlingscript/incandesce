<br />
<div class="booyah-box col-xs-10 col-xs-offset-1">
	<h1 class="text-center"><%= current_course.title %></h1>
	<br />
	<%= image_tag current_course.image, :class => 'img-responsive' %>
	<br />
	<%= link_to 'Preview as student', course_path(current_course), :class => 'btn btn-warning btn-lg pull-right' %>
	<br class="clr" />
	<div class="text-center">
		<%= link_to 'Add new section', new_instructor_course_section_path(current_course), :class => 'btn btn-primary btn-lg' %>
	</div>

	<div class="col-xs-12">
		<% current_course.sections.each do |section| %>
			<br /><br />
			<div class="section">
				<h3>
					<%= section.title %>
				</h3>
				<%= link_to 'New lesson', new_instructor_section_lesson_path(section), :class => 'pull-right btn btn-primary' %>
				<br />
				<% section.lessons.rank(:row_order).each do |lesson| %>
					<div class="col-xs-12 col-sm-6">
						<div class="lesson text-center">
							<br />
								<%= link_to lesson_path(lesson) do %>
									<b><%= lesson.title %></b>
									<br />
									<%= lesson.subtitle %>
								<% end %>
							</div>
						</div>
					<% end %>
				<div class="clearfix"></div>
			</div>
		<% end %>
	</div>
</div>