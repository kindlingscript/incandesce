<br />

<div class="booyah-box col-xs-10 col-xs-offset-1">
	<h1 class="text-center">Learn something new today</h1>
	<hr />

	<% @courses.each do |course| %>
		<h3 class="text-center"><%= link_to course.title, course_path(course) %></h3>
		<br />
		<%= image_tag course.image, :class => 'img-responsive image-center' %>
		<br />
		<div class="col-sm-8 col-xs-12 text-center">
			<%= course.description %>
		</div>
		<div class="col-sm-4 col-xs-12 text-center">
			<%= link_to 'Find out more', course_path(course), :class => 'btn btn-warning btn-large' %>
		</div>
		<br class="clr" />
	<% end %>
</div>